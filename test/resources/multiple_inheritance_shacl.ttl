@prefix lbs: <https://lib.is/test/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

foaf:PersonShape
    a sh:NodeShape ;
    sh:name "http://xmlns.com/foaf/0.1/Person" ;
    sh:property
        [
            sh:name "http://xmlns.com/foaf/0.1/firstName" ;
            sh:path foaf:firstName
        ],
        [
            sh:name "http://xmlns.com/foaf/0.1/lastName" ;
            sh:path foaf:lastName
        ] ;
    sh:targetClass foaf:Person .


lbs:ThingShape a sh:NodeShape ;
    sh:description "A generic entity" ;
    sh:targetClass lbs:Thing ;
    sh:name "Thing" ;
    sh:property
        [
            sh:path lbs:creation_date ;
            rdfs:label "Creation date"@en ;
            rdfs:label "Aangemaakt op"@nl ;
            sh:name "creation_date" ;
            sh:description "Date the entity was created" ;
            sh:datatype xsd:dateTime ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ] .

lbs:FoafPersonShape a sh:NodeShape ;
    sh:name "FoafPerson" ;
    sh:targetClass foaf:Person ;
    sh:description "Inherited person entity" ;
    sh:property
        [
            sh:path foaf:firstName ;
            sh:datatype xsd:string ;
            sh:name "firstName" ;
            rdfs:label "voornaam"@nl;
            sh:minCount 1 ;
        ] ;
    sh:property
        [
            sh:path foaf:lastName ;
            sh:datatype xsd:string ;
            sh:name "lastName" ;
        ] .

lbs:PersonShape a sh:NodeShape ;
    sh:name "LbsPerson" ;
    sh:description "A person entity with inherited properties" ;
    sh:targetClass lbs:Person ;
    sh:node lbs:ThingShape ; #inherit properties
    sh:node lbs:FoafPersonShape ; #inherit properties
    sh:property
        [
            sh:path lbs:favorite_food ;
            sh:datatype xsd:string ;
            sh:name "favorite_food" ;
        ] .