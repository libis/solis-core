t:ScheduleShape
    a               sh:NodeShape ;
    sh:description "" ;
    sh:targetClass  t:Schedule ;
    sh:node         t:Schedule ;
    sh:name         "Schedule" ;
    sh:property [sh:path t:id ;
                 sh:name "id";
                 sh:description "unique record identifier" ;
                 sh:datatype xsd:string ;
                 sh:minCount 1 ;
                 sh:maxCount 1 ;
    ] ;
    sh:property [sh:path t:Teacher ;
                 sh:name "teacher" ;
                 sh:description "schedule belongs to" ;
                 sh:nodeKind sh:IRI ;
                 sh:class    t:Teacher ;
                 sh:minCount 1 ;
                 sh:maxCount 1 ;
    ] ;
    sh:property [sh:path t:Student ;
                 sh:name "students" ;
                 sh:description "list of enrolled students" ;
                 sh:nodeKind sh:IRI ;
                 sh:class    t:Student ;
                 sh:minCount 0 ;
    ] ;
    sh:property [sh:path t:Course ;
                 sh:name "course" ;
                 sh:description "course within schedule" ;
                 sh:nodeKind sh:IRI ;
                 sh:class    t:Course ;
                 sh:minCount 1 ;
    ] ;
    sh:property [sh:path t:start_date ;
                 sh:name "start_date";
                 sh:description "" ;
                 sh:datatype xsd:date ;
                 sh:minCount 1 ;
                 sh:maxCount 1 ;
    ] ;
    sh:property [sh:path t:end_date ;
                 sh:name "end_date";
                 sh:description "" ;
                 sh:datatype xsd:date ;
                 sh:minCount 1 ;
                 sh:maxCount 1 ;
    ] ;
.

